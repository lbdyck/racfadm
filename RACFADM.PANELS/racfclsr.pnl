)BODY EXPAND(\\)
+\-\(%RACFADM - General Resources+)\-\
%Command ===>_ZCMD                                              +Scroll==>_SAMT+
%
+SELECT: ¬SELCMDS                                                              ¬
%
%S  ~Class
%-------------------------------------------------------------------------------
)MODEL CLEAR(OPTA)
_Z+ $Z        #Z                +
)INIT
  .ZVARS   = '(OPTA CLASS ACTION)'
  .HELP    = #RACCLSR
  &ZCMD    = ' '
  IF (&SAMT = ' ')
      &SAMT = &ZSCED
)PROC
  &SROW = &Z
  IF (&ZCMD = &Z)
     IF (&ZTDSELS = 0)
        &SROW = .CSRROW
        IF (&SROW ^= 0)
           &OPTA = S
  IF (&SETMADMN = YES)
     VER (&OPTA,LIST,S,L,R)
  ELSE
     VER (&OPTA,LIST,S,L)
)PNTS
  FIELD(ZPS00001) VAR(ZCMD) VAL('SORT CLASS')
)END
